
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/angular.js"></script>
</head>
<body ng-app="MyApp">
    <div >
      <label>Name:</label>
        <input  type="text" ng-model="Name"/>
        <h3>{{Name}}</h3>
    </div>
    <h2>{{Name}}</h2>
    Name : <input type="text" ng-model="Name" value="{{Name}}" />
    <hr />
    <div ng-controller="MyCtrl">
        my name : {{name}}
        <br />
        location : {{address}}
    </div>

</body>
</html>
<script>
    var app = angular.module("MyApp", []);
    app.controller('MyCtrl', function ($scope) {
        $scope.name = "Shuvo";
        $scope.address = "Nilphamari";
    });
</script>