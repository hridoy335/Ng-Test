
@{
    Layout = null;
}

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>

<div ng-app="student" ng-controller="student_controller">

    <div>
        <form>
            <label>Student Name :</label>
            <input type="text" ng-model="StudentName" name="StudentName" placeholder="StudentName" />
            <br />

            <label>Student Roll :</label>
            <input type="text" ng-model="Role" name="Role" placeholder="Role" />
            <br />

            <label>Student Address :</label>
            <input type="text" ng-model="Address" name="Address" placeholder="Address" />
            <br />

            <button type="button" id="save" ng-click="save()">Sasv</button>
            <br />
        </form>
       
    </div>


    <div>
        <input type="search" ng-model="search" />
    </div>
    <table>
        <thead>
            <tr>

            <th>ID</th>
            <th>Name</th>
            <th>Roll</th>
            <th>Address</th>
            </tr>

        </thead>
        <tbody>
            <tr ng-repeat="x in student|filter:search">
                <td>{{x.StudentId}}</td>
                <td>{{x.StudentName|uppercase}}</td>
                <td>{{x.Role|currency}}</td>
                <td>{{x.Address|uppercase}}</td>
            </tr>
        </tbody>
    </table>

</div>



<script src="~/AngularJsApp/module.js"></script>
<script src="~/AngularJsApp/service.js"></script>
<script src="~/AngularJsApp/controller.js"></script>