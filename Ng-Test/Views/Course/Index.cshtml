
@{
    Layout = null;
}

<!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <script src="~/Scripts/angular.min.js"></script>
        <script src="~/Scripts/angular.js"></script>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/AngularJsApp/module.js"></script>
        <script src="~/AngularJsApp/service.js"></script>
        <script src="~/AngularJsApp/coursecontroller.js"></script>

    </head>
    <body >

        <div class="container" ng-app="student" ng-controller="course_controller">
            <div class="container">
                <form>
                    <label>Course Id</label>
                    <input type="text" name="CourseName" placeholder="Course ID" ng-model="CourseId" /><br />

                    <label>Course Name</label>
                    <input type="text" name="CourseName" placeholder="Course Name" ng-model="CourseName" /><br />

                    <label>Course Credit</label>
                    <input type="text" name="CourseCredit" placeholder="Course Credit" ng-model="CourseCredit" /><br />

                    <input type="button" value="Save" id="courseInsert" ng-click="courseInsert()" />
                    <input type="button" value="Update" id="updatecourse" ng-click="updatecourse()" />
                    <input type="button" value="Clear" id="clear" ng-click="clear()" />

                </form>


            </div>

            <input type="text" ng-model="search" class="form-control"/>

            <table class="table-responsive table-striped" >
                <thead>
                    <tr>
                        <th>Course Id</th>
                        <th>Course Name</th>
                        <th>Course Credit</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in course|filter:search">
                        <th>{{x.CourseId}}</th>
                        <th>{{x.CourseName}}</th>
                        <th>{{x.CourseCredit}}</th>
                    </tr>
                </tbody>
            </table>
        </div>
    </body>
    </html>


